@model XSIS.Shop.ViewModels.SupplierViewModel

<div class="modal-header">
    <h4 class="modal-title">Details Supplier</h4>
</div>

<div class="modal-body">
    <div class="card">
        <form class="form-horizontal" role="form">
            <div class="card-header">
            </div>

            <div class="card-body card-padding">
                <div class="pmb-block">
                    <div class="pmbb-body p-l-30">
                        <div class="pmbb-view">
                            <dl class="dl-horizontal">
                                <dt>
                                    Nama Perusahaan
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.CompanyName)
                                </dd>
                            </dl>
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.ContactName)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.ContactName)
                                </dd>
                            </dl>
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.ContactTitle)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.ContactTitle)
                                </dd>
                            </dl>
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.City)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.City)
                                </dd>
                            </dl>
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.Country)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Country)
                                </dd>
                            </dl>
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.Country)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Country)
                                </dd>
                            </dl>
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.Phone)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Phone)
                                </dd>
                            </dl>
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.Fax)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Fax)
                                </dd>
                            </dl>
                            <dl class="dl-horizontal">
                                <dt>
                                    Daftar Produk
                                </dt>
                                <dd>

                                </dd>
                            </dl>
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <tr>
                                        <th>
                                            Nama Produk
                                        </th>
                                        <th>
                                            Harga
                                        </th>
                                        <th>
                                            Kemasan
                                        </th>
                                        <th>
                                            Kadaluarsa
                                        </th>
                                    </tr>

                                    @foreach (var item in Model.ListProductViewModel)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ProductName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.UnitPrice)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Package)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IsDiscontinued)
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" id="btn-close" class="btn btn-default btn-sm m-t-10" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
