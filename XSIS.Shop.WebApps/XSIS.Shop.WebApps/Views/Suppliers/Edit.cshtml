@model XSIS.Shop.ViewModels.SupplierViewModel

@{
    ViewBag.SelectedHome = "";
    ViewBag.SelectedCustomer = "";
    ViewBag.SelectedSupplier = "active";
    ViewBag.SelectedProduct = "";
    ViewBag.SelectedOrder = "";
    ViewBag.Title = "Edit Supplier";
}

<style>
    .error {
        color: red;
    }
</style>

<div class="block-header">
    <h2>Form Create Edit Existing Supplier</h2>
</div>

<div class="card">
    <div class="card-header">
        <h2>
            Edit Existing Supplier
            <small>
                Form di bawah ini digunakan untuk mengedit data supplier yang sudah ada sebelumnya.
            </small>
        </h2>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "error" })
        @Html.HiddenFor(model => model.Id)

        <div class="card-body card-padding">
            <div class="form-group">
                <div class="fg-line">
                    @Html.LabelFor(model => model.CompanyName)
                    @Html.EditorFor(model => model.CompanyName, new { htmlAttributes = new { @class = "form-control input-sm", @placeholder = "Masukkan Nama Perusahaan" } })
                </div>
                @Html.ValidationMessageFor(model => model.CompanyName, "", new { @class = "error" })
            </div>
            <div class="form-group">
                <div class="fg-line">
                    @Html.LabelFor(model => model.ContactName)
                    @Html.EditorFor(model => model.ContactName, new { htmlAttributes = new { @class = "form-control input-sm", @placeholder = "Masukkan Nama PIC/Karyawan" } })
                </div>
                @Html.ValidationMessageFor(model => model.ContactName, "", new { @class = "error" })
            </div>
            <div class="form-group">
                <div class="fg-line">
                    @Html.LabelFor(model => model.ContactTitle)
                    @Html.EditorFor(model => model.ContactTitle, new { htmlAttributes = new { @class = "form-control input-sm", @placeholder = "Masukkan Gelar" } })
                </div>
                @Html.ValidationMessageFor(model => model.ContactTitle, "", new { @class = "error" })
            </div>
            <div class="form-group">
                <div class="fg-line">
                    @Html.LabelFor(model => model.City)
                    @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control input-sm", @placeholder = "Masukkan Nama Kota" } })
                </div>
                @Html.ValidationMessageFor(model => model.City, "", new { @class = "error" })
            </div>
            <div class="form-group">
                <div class="fg-line">
                    @Html.LabelFor(model => model.Country)
                    @Html.EditorFor(model => model.Country, new { htmlAttributes = new { @class = "form-control input-sm", @placeholder = "Masukkan Nama Negara" } })
                </div>
                @Html.ValidationMessageFor(model => model.Country, "", new { @class = "error" })
            </div>
            <div class="form-group">
                <div class="fg-line">
                    @Html.LabelFor(model => model.Phone)
                    @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control input-sm", @placeholder = "Masukkan No. Telepon" } })
                </div>
                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "error" })
            </div>
            <div class="form-group">
                <div class="fg-line">
                    @Html.LabelFor(model => model.Fax)
                    @Html.EditorFor(model => model.Fax, new { htmlAttributes = new { @class = "form-control input-sm", @placeholder = "Masukkan No. Telepon" } })
                </div>
                @Html.ValidationMessageFor(model => model.Fax, "", new { @class = "error" })
            </div>
            <a href="@Url.Action("Index","Suppliers")" class="btn btn-info btn-sm m-t-10">Back to Index</a>
            <button type="submit" class="btn btn-primary btn-sm m-t-10">Update</button>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}