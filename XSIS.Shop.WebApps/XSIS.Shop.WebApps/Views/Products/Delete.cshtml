@model XSIS.Shop.ViewModels.ProductViewModel

@{
    ViewBag.SelectedHome = "";
    ViewBag.SelectedCustomer = "active";
    ViewBag.SelectedSupplier = "";
    ViewBag.SelectedProduct = "";
    ViewBag.SelectedOrder = "";
    ViewBag.Title = "Delete Product";
}

<div class="block-header">
    <h2>Form Confirmation Delete Existing Customer</h2>
</div>
@using (Html.BeginForm(new { @class = "form-horizontal" }))
{
    <div class="card">
        <div class="card-header">
            <h2>
                Confirmation Delete Existing Product
                <small>
                    Form di bawah ini digunakan untuk konfirmasi Delete Existing Product.
                </small>
            </h2>
        </div>

        <div class="card-header">
            <h2 style="color:red">
                <b>Apakah Anda yakin untuk menghapus data produk berikut?</b>
            </h2>
        </div>

        <div class="card-body card-padding">
            <div class="pmb-block">
                <div class="pmbb-body p-l-30">
                    <div class="pmbb-view">
                        <dl class="dl-horizontal">
                            <dt>
                                Nama Produk
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.ProductName)
                            </dd>
                        </dl>
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.UnitPrice)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.UnitPrice)
                            </dd>
                        </dl>
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.Package)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Package)
                            </dd>
                        </dl>
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.IsDiscontinued)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.IsDiscontinued)
                            </dd>
                        </dl>
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.SupplierName)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.SupplierName)
                            </dd>
                        </dl>

                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <a href="@Url.Action("Index","Products")" class="btn btn-info btn-sm m-t-10">Back to Index</a>
                            <button type="submit" class="btn btn-danger btn-sm m-t-10"><i class="zmdi zmdi-delete"></i> Hapus</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}